{
  "name": "@preachjs/toast",
  "version": "0.0.0",
  "description": "toasts for preact",
  "homepage": "https://github.com/preachjs/toast",
  "bugs": {
    "url": "https://github.com/preachjs/toast/issues"
  },
  "repository": {
    "url": "git+https://github.com/preachjs/toast.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "reaper",
    "email": "ahoy@barelyhuman.dev",
    "url": "https://reaper.is"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/toast.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": ["dist/*"],
  "scripts": {
    "dev": "concurrently 'pnpm:build watch' 'pnpm:build:docs watch'",
    "build": "microbundle -f modern --jsxImportSource preact --external=preact,@preact/signals",
    "build:docs": "microbundle -f modern --jsxImportSource preact --external=preact,@preact/signals -o docs/bundle",
    "fix": "biome check --fix .",
    "prepare": "husky",
    "next": "bumpp",
    "publint": "publint",
    "prepublishOnly": "pnpm build"
  },
  "nano-staged": {
    "*.{js,ts,json}": ["biome check --fix"],
    "*.{md}": ["prettier --write"]
  },
  "prettier": "@barelyhuman/prettier-config",
  "devDependencies": {
    "@barelyhuman/prettier-config": "^2.0.2",
    "@biomejs/biome": "^1.9.4",
    "bumpp": "^9.9.2",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "microbundle": "^0.15.1",
    "nano-staged": "^0.8.0",
    "preact": "^10",
    "prettier": "^3.4.2",
    "publint": "^0.2.12",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@preachjs/popper": "^0.0.6",
    "@preact/signals": "^2.0.1"
  },
  "packageManager": "pnpm@9.15.9"
}
